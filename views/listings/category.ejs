<%- layout("layouts/boilerplate") -%>
<body>

    <% if(allListings.length == 0){%>
        <h3 class="mt-3">No Listings are posted under <%= categorieName %>!</h3>
    <%}else{%>
    <div class="container ">
        <h3 class="mt-3"><%= categorieName %></h3>
        <div class="row row-cols-1 row-cols-xxl-3 row-cols-md-3 row-cols-sm-2 mt-4">
            
            <% for(let listing of allListings){ %>
                <a href="/listings/<%= listing._id %>"> 
                <div class="card col" >
                    <img src="<%= listing.image.url %>" class="card-img-top index-img" alt="listing image" >
                    <!-- <div class="card-img-overlay"><i class="fa-regular fa-heart"></i></div> -->
                    <div class="card-body">
                    <p class="card-text"><b><%= listing.title %></b>
                    <br>price :&#8377;<%=listing.price.toLocaleString("en-IN")%> /night</p>
                    </div>
                </div>
                </a>


                <% } %>
        </div>
    </div>
    <% } %>
</body>