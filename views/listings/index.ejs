<%- layout("layouts/boilerplate") -%>
<style>
    #filters{
        display: flex;
        flex-direction: row;
        align-items: center;
        flex-wrap: nowrap;
        overflow-x: auto;
    }
    
    .filter-info{
        display: flex;
        flex-direction: row;
        align-items: center;
        flex: 1;
    }

    .filter{
        text-align: center;
        margin: 2rem 2rem 0 0.8rem;
        opacity: 0.8;
    }

    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .filter p {
        font-size: 0.8rem;
    }
  .filter a{
        text-decoration: none;
        color: black;
        opacity: 0.9;
    }
    .gst{
         display: none;
    }
    /* .sec-nav {
        display: flex;
        flex-direction: row;
    } */
   
    
   .toggle-switch{
    display: flex;
    align-items: center;
    flex-wrap: nowrap;
    font-size: 1em;
    padding: 1rem;
    height: 3rem;
    border: 1px solid rgba(0, 0, 0, 0.527);
    border-radius: 1rem;
   }

   @media (max-width : 1230px){
    .form-check-reverse{
        height: 1rem;
        width: 14rem;
    }
   }
    
</style>
<body>
    <div class="sec-nav">
    <div id="filters">
        <div class="filter-info">
        <div class="filter">
           <a href="/listings/category/Trending"> 
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p> 
            </a>
        </div>
        <div class="filter">
            <a href="/listings/category/Rooms"> 
                <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
            </a>
           
        </div>
        <div class="filter">
            <a href="/listings/category/Iconic-cities"> 
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic cities</p>
            </a>
            
        </div>
        <div class="filter">
            <a href="/listings/category/Mountains"> 
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
            </a>
           
        </div>
        <div class="filter">
            <a href="/listings/category/Castles"> 
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </a>
          
        </div>
        <div class="filter">
            <a href="/listings/category/Amazing-Pool"> 
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pool</p>
            </a>
           
        </div>
        <div class="filter">
            <a href="/listings/category/Camping"> 
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </a>
        </div>
    
    <div class="filter">
        <a href="/listings/category/Arctic"> 
            <div><i class="fa-solid fa-snowman"></i></div>
            <p>Arctic</p>
        </a>
    </div>
</div>
    <div class="toggle-switch">
        <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after Taxes</label>
          </div>
    </div>
</div>
</div>
    <div class="container">
        <div class="row row-cols-1 row-cols-xxl-3 row-cols-md-3 row-cols-sm-2 ">
            <% for(let listing of allListings){ %>
                <a href="/listings/<%= listing._id %>"> 
                <div class="card col" >
                    <img src="<%= listing.image.url %>" class="card-img-top index-img" alt="listing image" >
                    <!-- <div class="card-img-overlay"><i class="fa-regular fa-heart"></i></div> -->
                    <div class="card-body">
                    <p class="card-text"><b><%= listing.title %></b> </p>
                    <p id="price">price :&#8377;<%=listing.price.toLocaleString("en-IN")%> /night<i class="gst" >+18% GST</i></p>
                    </div>
                </div>
                </a>
                <% } %>
        </div>
    </div>
    <script>
        let toggleSwitch = document.getElementById("flexSwitchCheckDefault");

        let allListings = document.querySelectorAll(".card-body #price .gst");
        toggleSwitch.addEventListener("click",function(){
            // console.log(allListings);
            for(let listing of allListings){
                console.dir(listing);
            if(listing.style.display != "inline"){
                listing.style.display = "inline";
            }else{
                listing.style.display="none"
            }
        }
        })
     
    </script>
</body>
